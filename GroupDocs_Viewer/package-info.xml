<?xml version="1.0"?>
<!DOCTYPE package-info SYSTEM "http://www.simplemachines.org/xml/package-info">
<package-info xmlns="http://www.simplemachines.org/xml/package-info" xmlns:smf="http://www.simplemachines.org/">
	<id>GroupDocs:Viewer</id>
	<name>Groupdocs Viewer</name>
	<version>1.0</version>
	<type>modification</type>
		
	<install for="2.0 - 2.0.99">
	<readme parsebbc="true">readme.txt</readme>
		<modification type="file">groupdocs-viewer.xml</modification>
		<modification type="file">english.xml</modification>
    <redirect url="$scripturl?action=admin;area=modsettings;sa=general;" timeout="3000">redirect.txt</redirect>
	</install>
	
	<uninstall for="2.0 - 2.0.99">
		<modification type="file" reverse="true">groupdocs-viewer.xml</modification>
		<modification type="file" reverse="true">english.xml</modification>
	</uninstall>

</package-info>